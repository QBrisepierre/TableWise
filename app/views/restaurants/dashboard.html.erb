<div data-controller="modal" style="min-height: 100vh">

    <div class="min-h-full bg-gray-100">
      <%= render "header" %>
      <div>
        <header class="bg-white shadow">
          <div class="max-w-full px-4 py-6 sm:px-6 lg:px-8 flex justify-between">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900">Tableau de bord</h1>
            <a href="" data-action="click->modal#openModalNoShow" class="btn bg-primary">+ Ajouter un NoShow</a>
          </div>
        </header>
      </div>
      <main>
        <%= render "modal_noshow" %>
        <div class="mx-0 max-w-full py-6 sm:px-6 lg:px-8">

          <section class="px-6 ">
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
              <%= render "chart" %>
            </div>

            <div class="lg:flex lg:space-x-4">
              <div class="flex flex-col justify-center md:w-full lg:w-2/3">
                <%= render "table" %>
              </div>

              <%= render "donut" %>
            </div>
          
          </section>

        </div>
      </main>
    </div>
</div>