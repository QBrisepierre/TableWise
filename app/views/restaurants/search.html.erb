<div data-controller="modal" style="height: 100vh">
  <div class="min-h-full max-h-full bg-gray-100">
    <%= render "restaurants/dashboard/header/header" %>
    <div>
      <header class="bg-white shadow">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 flex justify-between">
          <h1 class="text-3xl font-bold tracking-tight text-gray-900">Rechercher</h1>
          <a href="" data-action="click->modal#open" class="btn bg-primary">+ NoShow</a>
          <%= form_with url: import_restaurants_path, method: :post do |f|%>
            <%= f.file_field :file, accept: ".csv" %>
            <%= f.button "import" %>
          <% end %>
        </div>
        
      </header>
    </div>
    <main>
      <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 flex justify-between">
          <%= render "restaurants/search/table" %>
        </div>
      </div>
    </main>
  </div>
  
</div>